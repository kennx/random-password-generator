{
  "compilerOptions": {
    "sourceMap": true,
    "target": "ES2015",
    "module": "ESNext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "lib": ["es2017", "DOM"],
    "strict": true,
    "esModuleInterop": false,
    "outDir": "./dist",
    "rootDir": "./",
    "allowJs": true,
    "noImplicitAny": true
  },
  "include": ["./src/**/*.ts"]
}
